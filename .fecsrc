{
    "eslint": {
        "env": {
            "node": true,
            "browser": true,
            "es6": true
        },

        "globals": {
            "console": true,
            "require": true,
            "define": true,
            "BNJS": true,
            "replaceUrl": true,
            "hideHeader": true,
            "app": true,
            "Set": true,
            "akb": true
        },

        "rules": {
            "no-console": 0,
            "brace-style": [2, "1tabs"],
            "fecs-no-require": false,
            "fecs-prefer-async-await": "off"
        }
    }
}
